<h1 class="my-4">Population Data by Country</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr class="table-primary">
      <th>Name</th>
      <th>Population</th>
      <th>Region</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% countries.each do |country| %>
      <tr>
        <td><%= country.name %></td>
        <td><%= number_with_delimiter country.population, delimiter: ',' %></td>
        <td><%= country.region %></td>
        <td><%= link_to 'ðŸ”Ž', country_path(country) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
